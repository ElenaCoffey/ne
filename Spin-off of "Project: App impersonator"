/* What does the app's SQL look like? */

CREATE TABLE Persona (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    First_name TEXT,
    Last_name text,
    age INTEGER,
    address text);
    
    CREATE TABLE Hours (
    Person_id INTEGER PRIMARY KEY AUTOINCREMENT,
    Hrs_sleep integer,
    Hrs_work INTEGER,
    Hrs_internet_browse integer,
    Mood text );

